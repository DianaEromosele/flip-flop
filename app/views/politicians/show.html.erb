<div class="container header-container">
  <div class="row">
    <div class="col-xs-4">
      <%= image_tag(@politician.image, class: "politician-image") if @politician.image?  %>
    </div>

    <div class="col-xs-8">
      <h3><%= @politician.name %></h3>
      @<%= @politician.twitter_handle %>
      </div>

  </div>

      <%= @politician.twitter_profile %>

<div id="chart">
</div>

<script>
function draw(data){
  d3.select( ".chart" )
    .selectAll( "div" )
      .data( data )
    .enter().append( "div" )
      .style( "width", function(d) { return d * 3 + "px"; })
      .text( function(d) { return d; });
  }

  function error(){
    console.log("error");
  }

      $.ajax({
           type: "GET",
           contentType: "application/json; charset=utf-8",
           url: '/graph/tweet_data',
           dataType: 'json',
           success: function(data) {
               draw(data);
           },
           error: function (result) {
               error();
           }
       });
</script>
