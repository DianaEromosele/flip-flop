<% if !request.xhr? %>
	<div class="container heading-container">
 	 <h2 class="heading-text">politicians on twitter</h2>

  <h5 class="text-center" id="search-header-text">search for a politician's twitter account</h5>

  <% @politicians.each do |politician| %>
    <div class="row politicians-index-list-container">
      <div class="col-xs-4">
        <ul class="list-unstyled">
          <li><%= link_to image_tag(politician.image, class: "politician-image"), politician_path(politician) %></li>
        </ul>
      </div>
     <div class="col-xs-8 politician-show-politician-list-text">
        <ul class="list-unstyled">
          <li><%= link_to politician.name, politician_path(politician) %></li>
        </ul>
      </div>

    </div>
  <% end %>

<% else %>

  <div class="ajax-twitter-search-result-container">
    <h3>Your search results:</h3>
      <% @politicians.each do |politician| %>

        <div class="row politicians-index-list-container">
          <div class="col-xs-4">
            <ul class="list-unstyled">
              <li><%= link_to image_tag(politician.image, class: "politician-image"), politician_path(politician) %></li>
            </ul>

          </div>

          <div class="col-xs-8 politician-show-politician-list-text">
            <ul class="list-unstyled">
              <li><%= link_to politician.name, politician_path(politician) %></li>
            </ul>
          </div>
          </div>
        <% end %>
    <% end %>
    </div>





