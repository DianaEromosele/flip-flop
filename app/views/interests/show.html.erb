<div class="container">

  <div class="row">
    <div class="col-xs-6">
      <%= image_tag(@politician.image, class: "politician-image") if @politician.image?  %>
    </div>
    <div class="col-xs-6">
      <div class="circle"></div>
      <p>issue: <%= @issue.name %> </p>
    </div>
  </div>

    <h3><%= link_to "#{@politician.name}", politician_path(@politician) %></h3>
    <p>@<%= @politician.twitter_handle %> </p>
    <p><%= @politician.twitter_profile %> </p>


<ul class="list-unstyled">

  <div class="tweet-container">
    <%@politician.issue_tweets(@issue.name).each do |tweet| %>
    <div class="individual-tweet">
        <li><%= url_changer(tweet.full_text).html_safe %> <p class="tweet-timestamp"><%= tweet.created_at.strftime('%B %e, %Y, %I:%M%p') %></p></li>
    </div>
    <% end %>
  </div>

</ul>


</div>
